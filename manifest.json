{
  "manifest_version": 3,
  "name": "FBIF OneClick Publish",
  "version": "1.0.0",
  "description": "微信公众号内容提取、编辑与多平台分发 Chrome 扩展",
  "permissions": [
    "tabs",
    "windows",
    "storage",
    "scripting",
    "activeTab",
    "downloads",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://mp.weixin.qq.com/*",
    "https://creator.xiaohongshu.com/*",
    "https://zhuanlan.zhihu.com/*",
    "https://*.zhihu.com/*",
    "https://mp.toutiao.com/*",
    "https://baijiahao.baidu.com/*",
    "https://member.bilibili.com/*",
    "https://mmbiz.qpic.cn/*",
    "https://*.qpic.cn/*",
    "https://res.wx.qq.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "打开内容分发中心"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "fallback.html",
        "styles/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
